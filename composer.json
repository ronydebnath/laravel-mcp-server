{
    "name": "ronydebnath/mcp-sdk",
    "description": "A Laravel package for building AI-driven conversational applications with real-time streaming, secure authentication, and flexible memory management.",
    "keywords": [
        "ronydebnath",
        "mcp-sdk",
        "laravel",
        "ai",
        "chat",
        "streaming"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Rony Debnath",
            "email": "ronydebnath@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^12.0",
        "illuminate/support": "^12.0",
        "illuminate/http": "^12.0",
        "illuminate/routing": "^12.0",
        "illuminate/config": "^12.0",
        "guzzlehttp/guzzle": "^7.0",
        "symfony/http-foundation": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^5.0",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Ronydebnath\\MCP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ronydebnath\\MCP\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/psalm",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ronydebnath\\MCP\\MCPServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
} 